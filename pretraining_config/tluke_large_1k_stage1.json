{
  "train_batch_size": 2048,
  "train_micro_batch_size_per_gpu": 4,
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 5e-4,
      "betas": [
        0.9,
        0.999
      ],
      "eps": 1e-6,
      "weight_decay": 0.01,
      "bias_correction": false
    }
  },
  "scheduler": {
    "type": "WarmupDecayLR",
    "params": {
      "warmup_min_lr": 0,
      "warmup_max_lr": 5e-4,
      "warmup_num_steps": 0,
      "total_num_steps": 42,
      "warmup_type": "linear"
    }
  },
  "gradient_clipping": 1.0
}